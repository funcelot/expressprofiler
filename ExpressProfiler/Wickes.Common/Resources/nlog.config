<?xml version="1.0" encoding="utf-8" ?>
<nlog
  xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <variable name="w-appName" value="Wickes.Common" />
    <variable name="w-logFolder" value="Logs" />
    <variable name="w-logFileName" value="${var:w-appName}_${machinename}_${processid}" />
  <variable name="w-logFilePathShort" value="${var:w-logFolder}\${date:format=yyyyMMdd}\${var:w-logFileName}" />
  <targets>
    <target name="file-log" xsi:type="File"
            layout="${longdate} || ${level:uppercase=true:fixedlength=true:padding=5} || ${logger} || ${message} || ${activityId} || ${all-event-properties} || ${ndlc} || ${exception:format=tostring} ||>>>"
            fileName="${var:w-logFilePathShort}.log"
            keepFileOpen="true"
            encoding="utf-8" />
    <target name="file-json" xsi:type="File" fileName="${var:w-logFilePathShort}.json" >
      <layout xsi:type="JsonLayout" >
        <attribute name="time" layout="${longdate}" />
        <attribute name="level" layout="${level:upperCase=true}"/>
        <attribute name="logger" layout="${logger}" />
        <attribute name="message" layout="${message}" />
        <attribute name="activityId" layout="${activityId}" />
        <attribute name="host" layout="${environment:variable=ComputerName}" />
        <attribute name="appName" layout="${var:w-appName}" />
        <attribute name="processId" layout="${processid}" />
        <attribute name="error" encode="false" >
          <layout type='JsonLayout'  maxRecursionLimit="2" renderEmptyObject="false" >
            <attribute name='type' layout='${exception:format=Type}' />
            <attribute name='message' layout='${exception:format=Message}' />
            <attribute name='exception' layout='${exception:format=tostring}' />
          </layout>
        </attribute>
        <attribute name="eventProperties" encode="false" >
          <layout type='JsonLayout' includeAllProperties="true" includeMdlc="true" maxRecursionLimit="2" renderEmptyObject="false"  />
        </attribute>
      </layout>
    </target>
    <target
      xsi:type="Console"
      name="console"
      layout="${longdate} || ${level:uppercase=true:fixedlength=true:padding=5} || ${logger} || ${message} || ${activityId} || ${all-event-properties} || ${ndlc} || ${exception:format=tostring} ||>>>" />
  </targets>
  <rules>
    <logger name="*" minlevel="Debug" writeTo="console" />
    <logger name="*" minlevel="Trace" writeTo="file-log" />
    <logger name="*" minlevel="Debug" writeTo="file-json" />
  </rules>
</nlog>